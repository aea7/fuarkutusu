# Example environment variables
# Copy this file to .env.local for local development

# Outstatic CMS Configuration
# GitHub OAuth App (https://github.com/settings/developers)
OST_GITHUB_ID=your_github_oauth_client_id
OST_GITHUB_SECRET=your_github_oauth_client_secret

# Random secret for session security (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
OST_TOKEN_SECRET=your_random_secret_string_here

# GitHub Repository
OST_REPO_SLUG=owner/repo_name
OST_REPO_BRANCH=main

# Content path (optional, defaults to outstatic/content)
NEXT_PUBLIC_OST_CONTENT_PATH=outstatic/content
